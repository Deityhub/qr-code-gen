{
  "name": "qr-code-gen",
  "version": "1.0.0",
  "description": "A robust, zero-dependency, highly configurable QR Code generator for your TypeScript/JavaScript projects.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:umd": "rollup -c",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:umd",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./umd": "./dist/umd/qr-code-gen.min.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "qr",
    "qrcode",
    "generator",
    "typescript",
    "iso-18004",
    "browser",
    "node"
  ],
  "author": "deityhub",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
